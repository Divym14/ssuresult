<!DOCTYPE html>
  
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!----======== CSS ======== -->
    <link rel="stylesheet" href="../CSS/styles2.css">
    
    <!----===== Boxicons CSS ===== -->
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    
    <!--<title>Dashboard Sidebar Menu</title>--> 
</head>
<body>
    <nav class="sidebar close">
        <header>
            <div class="image-text">
                <span class="image">
                    <img src="../images/icons8-test-account-80.png" alt="">
                </span>

                <div class="text logo-text">
                    <span class="name">Welcome</span>
                    <span class="student">Divya</span>
                </div>
            </div>

            <i class='bx bx-chevron-right toggle'></i>
        </header>

        <div class="menu-bar">
            <div class="menu" >

                <li class="search-box">
                    <i class='bx bx-search icon'></i>
                    <input type="text" placeholder="Roll No.">
                </li>

                <ul class="menu-links">
                    <li class="nav-link">
                        <a href="#" id="result" >
                            <i class="uil uil-medal icon"></i>
                            <span class="text nav-text" >Result</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a href="#" id="analytics" >
                            <i class='bx bx-pie-chart-alt icon' ></i>
                            <span class="text nav-text">Analytics</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a href="#" id="rankings">
                            <i class="uil uil-trophy icon"></i>
                            <span class="text nav-text">Rankings</span>
                        </a>
                    </li>
                   

                    

                </ul>
            </div>

            <div class="bottom-content">
                <li class="">
                    <a href="../index.html">
                        <i class='bx bx-log-out icon' ></i>
                        <span class="text nav-text">Back to home</span>
                    </a>
                </li>

                <li class="mode">
                    <div class="sun-moon">
                        <i class='bx bx-sun icon sun'></i>
                        <i class='bx bx-moon icon moon'></i>
                        
                    </div>
                    <span class="mode-text text">Light mode</span>

                    <div class="toggle-switch">
                        <span class="switch"></span>
                    </div>
                </li>
                
            </div>
        </div>

    </nav>

    <section class="home">
        <div class="text" id="resultdef">Result</div>
        <div class="text" id="analyticsdef" style="display: none;">Analytics</div>
        <div class="text" id="rankingsdef" style="display: none;">Rankings</div>
    </section>

    <script>
        const body = document.querySelector('body'),
        sidebar = body.querySelector('nav'),
        toggle = body.querySelector(".toggle"),
        searchBtn = body.querySelector(".search-box"),
        modeSwitch = body.querySelector(".toggle-switch"),
        modeText = body.querySelector(".mode-text");


        toggle.addEventListener("click" , () =>{
        sidebar.classList.toggle("close");
        })

        searchBtn.addEventListener("click" , () =>{
            sidebar.classList.remove("close");
        })

        modeSwitch.addEventListener("click" , () =>{
            body.classList.toggle("dark");
            
            if(body.classList.contains("dark")){
                modeText.innerText = "Dark mode";
            }else{
                modeText.innerText = "Light mode";
                
            }
        }); 
        document.getElementById("result").onclick=function(){
            document.getElementById("analyticsdef").style.display="none";
            document.getElementById("rankingsdef").style.display="none";
            document.getElementById("resultdef").style.display="block";
        }
        document.getElementById("analytics").onclick=function(){
            document.getElementById("resultdef").style.display="none";
            document.getElementById("rankingsdef").style.display="none";
            document.getElementById("analyticsdef").style.display="block";
        }
        document.getElementById("rankings").onclick=function(){
            document.getElementById("resultdef").style.display="none";
            document.getElementById("analyticsdef").style.display="none";
            document.getElementById("rankingsdef").style.display="block";
        }
    </script>

</body>
</html>
